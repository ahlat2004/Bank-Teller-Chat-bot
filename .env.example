# ============================================================================
# Bank Teller Chatbot - Environment Variables Template
# ============================================================================
# Copy this file to .env and customize the values
# DO NOT commit .env to version control!

# ============================================================================
# API Configuration
# ============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=True

# ============================================================================
# Logging Configuration
# ============================================================================
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# ============================================================================
# Database Configuration
# ============================================================================
# Leave empty to use default: data/bank_demo.db
# DATABASE_PATH=

# ============================================================================
# ML Model Configuration
# ============================================================================
# Confidence threshold for intent classification (0.0 to 1.0)
CONFIDENCE_THRESHOLD=0.60

# Maximum inference time in milliseconds
MAX_INFERENCE_TIME_MS=100

# ============================================================================
# Session Management
# ============================================================================
# Session timeout in minutes
SESSION_TIMEOUT_MINUTES=30

# Maximum conversation turns before reset
MAX_CONVERSATION_TURNS=10

# ============================================================================
# Security (for future use)
# ============================================================================
# SECRET_KEY=your-secret-key-here-change-in-production
# JWT_ALGORITHM=HS256
# ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================================================
# External APIs (for future integrations)
# ============================================================================
# OPENAI_API_KEY=your_openai_key_here
# TWILIO_ACCOUNT_SID=your_twilio_sid
# TWILIO_AUTH_TOKEN=your_twilio_token

# ============================================================================
# Feature Flags
# ============================================================================
# Enable/disable spaCy NER
USE_SPACY=False

# Enable debug mode (verbose logging)
DEBUG_MODE=False

# ============================================================================
# Development Settings
# ============================================================================
# Allow CORS from these origins (comma-separated)
# CORS_ORIGINS=http://localhost:3000,http://localhost:8000